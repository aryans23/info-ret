    "from sklearn.feature_selection import mutual_info_classif\n",
    "from sklearn.feature_extraction.text import CountVectorizer\n",
    "\n",
    "cv = CountVectorizer(max_df=0.95, min_df=2, max_features=10000, stop_words='english')\n",
    "X_vec = cv.fit_transform(reviews)\n",
    "res = Counter(zip(cv.get_feature_names(),mutual_info_classif(X_vec, labels, n_neighbors=50, discrete_features=True)))\n",
    "\n",
    "i = 1\n",
    "print(\"The most informative features(and their information gain) after removing the stop words are ranked as follows: \")\n",
    "for x in res.most_common(10):\n",
    "    print(str(i) + ' ' + str(x[0][0]) + ' ' + str(x[0][1]))\n",
    "    i = i+1"

   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Unique tokens = 36618\n"
     ]
    }
   ],
   "source": [
    "# your code here\n",
    "print('Unique tokens = ' + str(len(bag)))"
   ]
  },

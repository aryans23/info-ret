      "    avg / total       0.85      0.84      0.84     40000\n",
      "\n"
     ]
    }
   ],
   "source": [
    "score = []\n",
    "y_test_all = []\n",
    "predicted_all = []\n",
    "for train_index, test_index in kf.split(feature_vectors):\n",
    "    X, X_test = feature_vectors[train_index], feature_vectors[test_index]\n",
    "    y, y_test = labels[train_index], labels[test_index]\n",
    "    clf = KNeighborsClassifier().fit(X,y)\n",
    "    predicted = clf.predict(X_test)\n",
    "    y_test_all = y_test_all + list(y_test)\n",
    "    predicted_all = predicted_all + list(predicted)\n",
    "    score.append(accuracy_score(y_test,predicted)*100)\n",
    "print(\"Accuracies for kNN = \" + str(score))\n",
    "print(\"Average Accuracy = \" + str(np.average(np.array(score))) + '%')\n",
    "print\n",
    "print(metrics.classification_report(y_test_all, predicted_all, target_names=target_names))"
   ]
